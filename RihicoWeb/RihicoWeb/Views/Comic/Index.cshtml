@using RihicoWeb.Models
@model ComicViewModel
@{
    Layout = "~/Views/umbLayout.cshtml";
}
<script src="~/Scripts/frontend/getcomic.js"></script>
<div id="main-wrapper" ng-app="getComic" ng-controller="getComicController">
    <div id="main" class="container">
        <div class="row">
            <h2 class="text-center">漫画取回器</h2>
            {{model.comicDownloadList}}
            <hr />

            @Html.LabelFor(x => x.Url)
            @Html.TextBoxFor(x => x.Url, new { ng_model = "model.url", @class = "form-control" })
            <br />
            <button class="btn btn-success form-control" ng-click="getComic()">GetComic</button>
            <div id="viewResult" ng-repeat="comic in model.comicList">

            </div>
            <table id="viewResultTbl" class="table table-striped">
                <thead>
                    <tr>
                        <th>漫画名儿</th>
                        <td>漫画链接</td>
                        <td>详情</td>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="comic in model.comicList">
                        <td>{{comic.label}}</td>
                        <td>{{comic.url}}</td>
                        <td><button class="btn btn-primary" ng-click="getComicDetail(comic.label, comic.url)">详情</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    @* Modal Div *@
    <div id="comicDetailModal" style="display:none;">
        <table id="comicDetailTbl" class="table table-striped">
            <thead>
                <tr>
                    <th>集名</th>
                    <td>链接</td>
                    <td>下载</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="comic in model.comicChapterList">
                    <td>{{comic.label}}</td>
                    <td>{{comic.url}}</td>
                    <td><button class="btn btn-primary" ng-click="downloadComic(comic.label, comic.url)">下载</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>